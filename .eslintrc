{
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "rules": {
        "consistent-return": "error",
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "VariableDeclarator": {
                "let": 2,
                "const": 3
            }
        }],
        "no-else-return": 1,
        "no-console": 1,
        "quotes": ["error", "single"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never"
        }],
        "no-use-before-define": ["warn", "nofunc"],
        "comma-dangle": ["error",  {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "ignore"
        }],
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": true
        }],
        "no-underscore-dangle": "error",
        "complexity": [ "error", {
            "max": 10
        }],
        "max-statements": ["error", 20],
        "max-depth": ["error", 4],
        "max-nested-callbacks": ["error", 3],
        "no-param-reassign": [ "error", {
            "props": false
        }],
        "arrow-parens": ["error", "as-needed", {
            "requireForBlockBody": true
        }],
        "linebreak-style": ["error", "unix"],
        "no-cond-assign": ["error", "always"],
        "prefer-const": "error",
        "no-var": "error",
        "no-unused-expressions": 0,
        "padded-blocks": ["error", "never"],
        "max-len": ["error", {
            "code": 100,
            "comments": 150,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true,
            "ignoreUrls": true,
            "ignoreStrings": true
        }],
        "max-params": ["warn", 4],
        "func-style": ["error", "expression"]
    },
    "env": {
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": [
                    "node_modules",
                    "src",
                    "test"
                ]
            }
        }
     }
}
